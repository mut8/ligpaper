<<init.stoech, echo=F, fig=F, results=hide>>=
cond <- alldata$Harvest=="I"
cond2<-days==0

lst<-data.frame(alldata$C_lit[cond],  alldata$DOC[cond],alldata$N_lit[cond], alldata$P_lit[cond],alldata$C.N_lit[cond], alldata$C.P_lit[cond],alldata$N.P_lit[cond], alldata$K[cond], alldata$K[cond], alldata$CA[cond], alldata$MG[cond], alldata$FE[cond], alldata$MN[cond], alldata$ZN[cond])
lst2<-data.frame(orig_cTIC$L[cond2], orig_cTIC$C[cond2])


sig<-1

for (i in 1:13)
{
  aov<-anova(lm(lst[,i]~alldata$Litter[cond]))
  if(aov$'Pr(>F)'[1]<0.001) {sig[i]<-"<0.001"} else {sig[i]<-round(aov$'Pr(>F)'[1], digits=3)}
}  

for (i in 1:2)
{
  aov<-anova(lm(lst2[,i]~type[cond2]))
  if(aov$'Pr(>F)'[1]<0.001) {sig[i+13]<-"<0.001"} else {sig[(i+13)]<-round(aov$'Pr(>F)'[1], digits=3)}
}

stoech.init.mean <-
rbind(
formatC(tapply(alldata$C_lit[cond], alldata$Litter[cond], mean), digits=2, format="f"),
formatC(tapply(alldata$DOC[cond]/1000, alldata$Litter[cond], mean), digits=2, format="f") ,
formatC(tapply(alldata$N_lit[cond], alldata$Litter[cond], mean), digits=3, format="f") ,
formatC(tapply(alldata$P_lit[cond], alldata$Litter[cond], mean), digits=3, format="f"),
formatC(tapply(alldata$C.N_lit[cond], alldata$Litter[cond], mean), digits=2, format="f"),
formatC(tapply(alldata$C.P_lit[cond], alldata$Litter[cond], mean) , digits=0, format="f"),
formatC(tapply(alldata$N.P_lit[cond], alldata$Litter[cond], mean) , digits=2, format="f"),
formatC(tapply(alldata$K[cond], alldata$Litter[cond], mean), digits=2, format="f") ,
formatC(tapply(alldata$CA[cond], alldata$Litter[cond], mean), digits=2, format="f") ,
formatC(tapply(alldata$MG[cond], alldata$Litter[cond], mean), digits=2, format="f") ,
formatC(tapply(alldata$FE[cond], alldata$Litter[cond], mean), digits=0, format="f") ,
formatC(tapply(alldata$MN[cond], alldata$Litter[cond], mean), digits=0, format="f"),
formatC(tapply(alldata$ZN[cond], alldata$Litter[cond], mean) , digits=1, format="f"),
formatC(tapply(orig_cTIC$L[cond2],type[cond2], mean), digits=1, format="f"),
formatC(tapply(orig_cTIC$C[cond2],type[cond2], mean) , digits=1, format="f")
)

stoech.init.se<-
rbind(paste( "(", formatC(tapply(alldata$C_lit[cond], alldata$Litter[cond], stderr), digits=2, format="f") , ")", sep=""),
paste( "(", formatC(tapply(alldata$DOC[cond]/1000, alldata$Litter[cond], stderr), digits=2, format="f") , ")", sep=""),
paste(  " (", formatC(tapply(alldata$N_lit[cond], alldata$Litter[cond], stderr), digits=3, format="f"), ")", sep=""),
paste("(", formatC(tapply(alldata$P_lit[cond], alldata$Litter[cond], stderr), digits=3, format="f"), ")", sep=""),
paste( " (", formatC(tapply(alldata$C.N_lit[cond], alldata$Litter[cond], stderr), digits=2, format="f"), ")", sep=""),
paste("(", formatC(tapply(alldata$C.P_lit[cond], alldata$Litter[cond], stderr), digits=0, format="f"), ")", sep=""),
paste( "(", formatC(tapply(alldata$N.P_lit[cond], alldata$Litter[cond], stderr), digits=2, format="f"), ")", sep=""),
paste( "(", formatC(tapply(alldata$K[cond], alldata$Litter[cond], stderr), digits=2, format="f") , ")", sep=""),
paste( "(", formatC(tapply(alldata$CA[cond], alldata$Litter[cond], stderr), digits=2, format="f") , ")", sep=""),
paste(  " (", formatC(tapply(alldata$MG[cond], alldata$Litter[cond], stderr), digits=2, format="f"), ")", sep=""),
paste("(", formatC(tapply(alldata$FE[cond], alldata$Litter[cond], stderr), digits=0, format="f"), ")", sep=""),
paste( " (", formatC(tapply(alldata$MN[cond], alldata$Litter[cond], stderr), digits=0, format="f"), ")", sep=""),
paste("(", formatC(tapply(alldata$ZN[cond], alldata$Litter[cond], stderr), digits=1, format="f"), ")", sep=""),
paste("(",formatC(tapply(orig_cTIC$L[cond2], type[cond2], mean), digits=1, format="f"), ")", sep=""),
paste("(",formatC(tapply(orig_cTIC$C[cond2], type[cond2], mean) , digits=1, format="f"), ")", sep="")
      )

stoech.init<-
cbind(stoech.init.mean[,1], stoech.init.se[,1], stoech.init.mean[,2], stoech.init.se[,2], stoech.init.mean[,3], stoech.init.se[,3], stoech.init.mean[,4], stoech.init.se[,4], sig)

rownames(stoech.init) <- c("C (% d.w.)", "C extr (mg g-1)", "N (% d.w.)", "P (% d.w.)", "C:N (w/w)", "C:P (w/w)", "N:P (w/w)", "K (mg g-1)", "Ca (mg g-1)","Mg (mg g-1)", "Fe (ppm)", "Mn (ppm)","Zn (ppm)", "Lignin","Carbohydrates")
colnames(stoech.init) <- c(typlev[1], "(SE)", typlev[2], "(SE)",typlev[3], "(SE)", typlev[4], "(SE)", "p value")

