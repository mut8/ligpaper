<<CUE, fig=T, echo=F, results=hide, width=7, height=10.5>>=

par(mfrow=c(3,2), mar=c(5.1,6.1,4.1,2.1))
par()
cue.depoly.h2<-(alldata$Glucan.Gross.Depolymerisation[alldata$days==97]-alldata$Respiration[alldata$days==97])/alldata$Glucan.Gross.Depolymerisation[alldata$days==97]

cue.cons.h2<-(alldata$Glucose.Gross.Consumption[alldata$days==97]-alldata$Respiration[alldata$days==97])/alldata$Glucose.Gross.Consumption[alldata$days==97]

cue.depoly.h3<-(alldata$Glucan.Gross.Depolymerisation[alldata$days==181]-alldata$Respiration[alldata$days==181])/alldata$Glucan.Gross.Depolymerisation[alldata$days==181]

cue.cons.h3<-(alldata$Glucose.Gross.Consumption[alldata$days==181]-alldata$Respiration[alldata$days==181])/alldata$Glucose.Gross.Consumption[alldata$days==181]

bplot(cue.depoly.h2, alldata$Litter[alldata$days==97], ylab="CUE (H2)", main="glucan depolymerization based")
bplot(cue.cons.h2, alldata$Litter[alldata$days==97], main="glucose consumption based based")
bplot(cue.depoly.h3, alldata$Litter[alldata$days==181], ylab="CUE (H3)")
bplot(cue.cons.h3, alldata$Litter[alldata$days==181])

sep.h2<-alldata$Litter[alldata$days==97]
x<-tapply(cue.depoly.h2[is.na(cue.depoly.h2)==F], sep.h2[is.na(cue.depoly.h2)==F], mean)
xerr<-tapply(cue.depoly.h2[is.na(cue.depoly.h2)==F], sep.h2[is.na(cue.depoly.h2)==F], stderr)
y<-tapply(hmw.proc$Lresp, type[h3], mean)
yerr<-tapply(hmw.proc$Lresp, type[h3], stderr)

plot(x,y, type="n", xlim=c(0.80, .97), ylim=c(0,1.4), ylab="Lignin loss / mass loss \n0-181 days", xlab="CUE (97 days) \n(glucan depoly - act. resp) / glucan depoly")
plotCI(x, y, barcol=errcol, uiw=yerr, liw=yerr, add=T, gap=0, pch=pch, pt.bg=colscale)
plotCI(x, y, err="x", barcol=errcol, uiw=xerr, liw=xerr, add=T, gap=0, pch=pch, pt.bg=colscale)

cor<-cor.test(x,y)
abline(lm(y~x))
abline(h=0, lty=2)
abline(h=1, lty=2)

#text(cor$estimate^2)
text(.97, 1.4, paste("r² =", round((cor$estimate)^2, digits=3), siglev(cor$p.value)), adj=c(1,1))


